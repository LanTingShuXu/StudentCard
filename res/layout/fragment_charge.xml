<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/fragment_charge_netCharge"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/selector_fragmen_charge_netcharge"
        android:clickable="true" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/fragment_charge_icon_charge" />

        <TextView
            android:id="@+id/fragment_charge_netCharge2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="网络计费充值"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fragment_charge_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_charge_netCharge2"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="当前余额0.00元"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_charge_electryCharge"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/selector_fragmen_charge_electry_charge"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            android:src="@drawable/fragment_charge_electry_charge" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="电控缴费"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_charge_otherCharge"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/selector_fragmen_charge_other_charge"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            android:src="@drawable/fragment_charge_other_charge" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="其他缴费"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>